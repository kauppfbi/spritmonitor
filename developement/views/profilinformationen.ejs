<html>

<head>
    <% include ./partials/head %>
        <title>Mein Profil</title>
        <script type="text/javascript">
            var user = <%- JSON.stringify(user) %>
            console.log(user);
        </script>
</head>

<body class="body">
    <% include ./partials/header %>
        <div id="content">
            <h1 class="eingeschobenh1">Mein Profil</h1>
            <div class="bordercontainer">
                <span>
          <br>
                    <a><b>Email:</b> <%= user.email %></a>
          <br>
                    <a><b>Passwort:</b> *****</a>
          <br>
          <% if (user.anrede != null) {%>
              <a><b>Anrede:</b> <%= user.anrede %> </a>
          <br>
          <% } %>
          <% if (user.nachname != "") {%>
              <a><b>Nachname:</b> <%= user.nachname %> </a>
          <br>
          <% } %>
          <% if (user.vorname != "") {%>
              <a><b>Vorname:</b> <%= user.vorname %> </a>
          <br>
          <% } %>
          <% if (user.geburtsdatum != "") {%>
              <a><b>Geburtsdatum:</b> <%= user.geburtsdatum %> </a>
          <br>
          <% } %>
          <% if (user.straße != "") {%>
              <a><b>Straße:</b> <%= user.straße %> </a>
          <br>
          <% } %>
          <% if (user.hausnummer != "") {%>
              <a><b>Hausnummer:</b> <%= user.hausnummer %> </a>
          <br>
          <% } %>
          <% if (user.postleitzahl != "") {%>
              <a><b>Postleitzahl:</b> <%= user.postleitzahl %> </a>
          <br>
          <% } %>
          <% if (user.ort != "") {%>
              <a><b>Ort:</b> <%= user.ort %> </a>
          <br>
          <% } %>
          <% if (user.land != "") {%>
              <a><b>Land:</b> <%= user.land %> </a>
          <br>
          <% } %>
      </span>
                <button type="button" id="ProfilLoeschen" onclick="deleteProfil()">Profil löschen</button>
                <br>
                <a href="/profilAendern">
                    <button type="button" id="ProfilAendern">Profil ändern</button>
                </a>
            </div>
        </div>
        <script type="text/javascript">
        var user = <%- JSON.stringify(user) %>;
        </script>
        <script src="/js/profilinformation.js"></script>
</body>

</html>
